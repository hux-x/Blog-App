<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <%- include ("./partials/head") %>
 <%- include("./styles/profile") %>
    <title>Hux</title>
</head>
<body>

    <%- include ("./partials/nav") %>
    
    <div class="content">
        <h1 class="page-heading">Your blogs</h1>
        
        <div class="blog-grid">
            <% blogs.forEach(blog => { %>
                <div class="blog-card">
                    <div class="blog-card-image">
                        <img src="<%= blog.coverImageURL %>" alt="Blog Cover">
                    </div>
                    <div class="blog-card-content">
                        <h2 class="blog-card-title"><%= blog.title %></h2>
                        <a href="/blogs/<%= blog._id %>" class="blog-card-button">Read More</a>
                        
                        <!-- Edit and Delete buttons -->
                        <div class="blog-card-actions">
                            <button onclick="window.location.href='/blogs/edit'">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="delete-button" onclick="if(confirm('Are you sure you want to delete this blog?')) window.location.href='/user/profile/delete/<%= blog._id %>'">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include ("./partials/scripts") %>
</body>
</html>
